#!/bin/sh
# Simple pg_dump stub: if called with -f <file> create that file
OUT=""
while [ "$#" -gt 0 ]; do
  if [ "$1" = "-f" ]; then
    shift
    OUT="$1"
    break
  fi
  shift
done
if [ -n "$OUT" ]; then
  mkdir -p "$(dirname "$OUT")" 2>/dev/null || true
  touch "$OUT" 2>/dev/null || true
fi
echo "pg_dump (stub) 1.0"
exit 0

