{
    "name": "sistema-estoque-electron",
    "version": "1.0.0",
    "description": "Aplicação Electron para o Sistema de Estoque",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "npm run build && electron .",
        "dev": "tsc && electron .",
        "watch": "tsc --watch",
        "build:frontend": "cd ../frontend && npm run build -- --configuration=production",
        "build:backend": "cd ../backend-spring && mvn -q -DskipTests package",
        "build:all": "npm run build:frontend && npm run build:backend && npm run build",
        "dist": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder && node ../scripts/maybe_auto_deploy.js",
        "dist:win": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder --win && node ../scripts/maybe_auto_deploy.js",
        "dist:mac": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder --mac && node ../scripts/maybe_auto_deploy.js",
        "dist:linux": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder --linux && node ../scripts/maybe_auto_deploy.js",
        "pack": "npm run build:all && electron-builder --dir"
    },
    "keywords": [
        "electron",
        "typescript",
        "desktop"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/electron": "^1.4.38",
        "@types/node": "^20.10.5",
        "electron": "^27.1.3",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.sistemaestoque.app",
        "productName": "Sistema de Gestão de Estoque",
        "directories": {
            "output": "dist-installer2",
            "buildResources": "../resources"
        },
        "icon": "icon/icon.ico",
        "files": [
            "dist/**/*",
            "assets/**/*",
            "icon/**/*",
            "!../backend/**/*",
            "!../frontend/**/*",
            "!node_modules"
        ],
        "extraResources": [
            {
                "from": "jdk-21",
                "to": "jdk/win"
            },
            {
                "from": "jre/win",
                "to": "jre/win"
            },
            {
                "from": "../backend-spring/target/backend-spring-0.0.1-SNAPSHOT.jar",
                "to": "backend-spring/backend-spring-0.0.1-SNAPSHOT.jar"
            },
            {
                "from": "../backend-spring/data",
                "to": "backend-spring/data"
            },
            {
                "from": "../backend-spring/secrets",
                "to": "backend-spring/secrets"
            },
            {
                "from": "../backend-spring/uploads/produtos",
                "to": "backend-spring/uploads/produtos"
            },
            {
                "from": "../backend-spring/pg",
                "to": "backend-spring/pg",
                "filter": ["**/*"]
            },
            {
                "from": "../resources/pg/win",
                "to": "pg/win",
                "filter": ["**/*"]
            },
            {
                "from": "../resources/pg/linux",
                "to": "pg/linux",
                "filter": ["**/*"]
            },
            {
                "from": "../resources/pg/mac",
                "to": "pg/mac",
                "filter": ["**/*"]
            },
            {
                "from": "../frontend/dist/sistema-estoque/browser",
                "to": "frontend",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "asar": true,
        "asarUnpack": [
            "frontend/**/*"
        ],
        "nodeGypRebuild": false,
        "buildDependenciesFromSource": false,
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "icon/icon.ico",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Sistema de Estoque",
            "installerIcon": "icon/icon.ico",
            "uninstallerIcon": "icon/icon.ico",
            "runAfterFinish": true,
            "perMachine": false,
            "include": "build/installer.nsh"
        },
        "mac": {
            "target": "dmg",
            "icon": "icon/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "icon/icon.ico"
        }
    }
}