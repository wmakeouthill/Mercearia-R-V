{
    "name": "sistema-estoque-electron",
    "version": "1.0.0",
    "description": "Aplicação Electron para o Sistema de Estoque",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "npm run build && electron .",
        "dev": "tsc && electron .",
        "watch": "tsc --watch",
        "build:frontend": "cd ../frontend && npm run build -- --configuration=production",
        "build:backend": "cd ../backend-spring && mvn -q -DskipTests package",
        "build:all": "npm run build:frontend && npm run build:backend && npm run build",
        "dist": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder && node ../scripts/maybe_auto_deploy.js",
        "dist:win": "node ../scripts/optimized-build-win.js",
        "dist:win-legacy": "node ../scripts/create-deploy-package.js && (rmdir /S /Q dist-installer2\\win-unpacked 2>nul || echo Cleaned) && npm run build:all && node ../scripts/copy-db-for-build.js && electron-builder --win && node ../scripts/maybe_auto_deploy.js",
        "dist:mac": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder --mac && node ../scripts/maybe_auto_deploy.js",
        "dist:linux": "node ../scripts/copy-db-for-build.js && node ../scripts/create-deploy-package.js && electron-builder --linux && node ../scripts/maybe_auto_deploy.js",
        "pack": "npm run build:all && electron-builder --dir"
    },
    "keywords": [
        "electron",
        "typescript",
        "desktop"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/electron": "^1.4.38",
        "@types/node": "^20.10.5",
        "electron": "^27.1.3",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.sistemaestoque.app",
        "productName": "Sistema de Gestão de Estoque",
        "directories": {
            "output": "dist-installer2",
            "buildResources": "../resources"
        },
        "afterPack": "build/afterpack.js",
        "icon": "icon/icon.ico",
        "files": [
            "dist/**/*",
            "assets/**/*",
            "icon/**/*",
            "!../backend/**/*",
            "!../frontend/**/*",
            "!node_modules"
        ],
        "extraResources": [
            {
                "from": "jdk-21",
                "to": "jdk/win"
            },
            {
                "from": "jre/win",
                "to": "jre/win"
            },
            {
                "from": "../backend-spring/target/backend-spring-0.0.1-SNAPSHOT.jar",
                "to": "backend-spring/backend-spring-0.0.1-SNAPSHOT.jar"
            },
            {
                "from": "../backend-spring/uploads",
                "to": "backend-spring/uploads",
                "filter": ["**/*"]
            },
            {
                "from": "../backend-spring/backups",
                "to": "backend-spring/backups",
                "filter": ["**/*"]
            },
            {
                "from": "../scripts/render-nota-pdf.js",
                "to": "scripts/render-nota-pdf.js"
            },
            {
                "from": "../scripts/cleanup-selective.js",
                "to": "scripts/cleanup-selective.js"
            },
            {
                "from": "../scripts/package.json",
                "to": "scripts/package.json"
            },
            {
                "from": "../scripts/node_modules",
                "to": "scripts/node_modules",
                "filter": [
                    "**/*",
                    "!sistema-estoque/**/*",
                    "!sistema-estoque"
                ]
            },
            {
                "from": "../backend-spring/pg/win",
                "to": "backend-spring/pg/win",
                "filter": ["**/*"]
            },
            {
                "from": "../frontend/dist/sistema-estoque/browser",
                "to": "frontend",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "asar": false,
        "asarUnpack": [
            "frontend/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "icon/icon.ico",
            "requestedExecutionLevel": "asInvoker"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Sistema de Estoque",
            "installerIcon": "icon/icon.ico",
            "uninstallerIcon": "icon/icon.ico",
            "runAfterFinish": true,
            "perMachine": false,
            "differentialPackage": false,
            "warningsAsErrors": false,
            "unicode": false,
            "deleteAppDataOnUninstall": false,
            "displayLanguageSelector": false,
            "multiLanguageInstaller": false,
            "packElevateHelper": false,
            "removeDefaultUninstallWelcomePage": false,
            "guid": "6c1e8b3f-4a2d-5e6f-9c8b-1a2b3c4d5e6f",
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "include": "build/installer.nsh"
        },
        "compression": "store",
        "removePackageScripts": true,
        "nodeGypRebuild": false,
        "buildDependenciesFromSource": false,
        "npmRebuild": false,
        "mac": {
            "target": "dmg",
            "icon": "icon/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "icon/icon.ico"
        }
    }
}